{
  "name": "@nosadev/vue-bottom-sheet",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "A Swipeable Bottom Sheet library for and vue3",
  "files": [
    "README.md",
    "dist/*"
  ],
  "keywords": [
    "vue",
    "vue3",
    "vue.js",
    "modal",
    "nuxt",
    "bottom-sheet",
    "pwa",
    "dialog",
    "swipe",
    "component"
  ],
  "main": "./dist/vue-bottom-sheet.cjs",
  "module": "./dist/vue-bottom-sheet.js",
  "author": "nosa-egharevba <nosaegharevba01@gmail.com> (https://github.com/Nosa-Drexx/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nosa-Drexx/vue-bottom-sheet"
  },
  "homepage": "https://github.com/Nosa-Drexx/vue-bottom-sheet#readme",
  "bugs": {
    "url": "https://github.com/Nosa-Drexx/vue-bottom-sheet/issues",
    "email": "nosaegharevba01@gmail.com"
  },
  "exports": {
    ".": {
      "import": "./dist/vue-bottom-sheet.js",
      "require": "./dist/vue-bottom-sheet.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite --config vite-demo.config.ts serve --host 0.0.0.0",
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "build-only": "vite build",
    "types": "vue-tsc ",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-dts": "^3.9.1",
    "vue-tsc": "^2.0.11"
  }
}
